    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<ImageView 
	    android:id="@+id/chatmenupicimage"
	    android:layout_height="fill_parent"
	    android:layout_width="0px"
	    android:layout_weight="1"
	    />
	<ImageView 
	    android:id="@+id/chatmenuvideoimage"
	    android:layout_height="fill_parent"
	    android:layout_width="0px"
	    android:layout_weight="1"
	    />
	<ImageView 
	    android:id="@+id/chatmenuvisitingimage"
	    android:layout_height="fill_parent"
	    android:layout_width="0px"
	    android:layout_weight="1"
	    />
	<ImageView 
	    android:id="@+id/chatmenupositionimage"
	    android:layout_height="fill_parent"
	    android:layout_width="0px"
	    android:layout_weight="1"
	    />
</LinearLayout>
