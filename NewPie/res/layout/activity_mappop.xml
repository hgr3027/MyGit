<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res/com.example.newpie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/up"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/poptime"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5" />

        <TextView
            android:id="@+id/popselecttime"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="#78CCEE" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@drawable/xx" />

    <LinearLayout
        android:id="@+id/down"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/popphoto"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="40"
            android:orientation="vertical"
            android:paddingLeft="8dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/popdepartement"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/popname"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/popstoptime"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/popoc"
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="#07BC06"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:visibility="invisible" />

</LinearLayout>