<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/show_play_004"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/versionnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/inputname"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="45dp"
                android:text="@string/inputnamestring"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/inputIdText"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_below="@id/inputname"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/input_style"
                android:inputType="text"
                android:textColor="@color/textcolor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtHide3"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_below="@id/inputIdText" />

            <TextView
                android:id="@+id/inputpass"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_alignLeft="@id/inputname"
                android:layout_below="@id/txtHide3"
                android:text="@string/inputpassstring"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/inputPassText"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignLeft="@id/inputIdText"
                android:layout_alignRight="@id/inputIdText"
                android:layout_below="@id/inputpass"
                android:background="@drawable/input_style"
                android:inputType="textPassword"
                android:textColor="@color/textcolor" 
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center|bottom"
            android:paddingBottom="40dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="8dp" >

            <Button
                android:id="@+id/buttonbak1"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:background="@drawable/button2" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="112dp"
                android:layout_height="33dp"
                android:layout_alignLeft="@id/buttonbak1"
                android:layout_alignRight="@id/buttonbak1"
                android:layout_alignTop="@id/buttonbak1"
                android:background="@drawable/button1"
                android:text="@string/submitString"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtHide2"
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:layout_toRightOf="@id/buttonbak1" />

            <Button
                android:id="@+id/buttonbak2"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_alignTop="@id/buttonbak1"
                android:layout_toRightOf="@id/txtHide2"
                android:background="@drawable/button3" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="112dp"
                android:layout_height="33dp"
                android:layout_alignLeft="@id/buttonbak2"
                android:layout_alignRight="@id/buttonbak2"
                android:layout_alignTop="@id/buttonbak2"
                android:background="@drawable/button4"
                android:text="@string/cancelString"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>